<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wholovesyellow.ics115_labatory.UserProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:srcCompat="@drawable/sample"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Username: 2013056099"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_username2"
        android:textSize="20sp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView_position2"
        android:layout_alignLeft="@+id/textView_name2"
        android:layout_alignStart="@+id/textView_name2"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:text="Position: Class President"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_position2"
        android:textSize="20sp"
        android:layout_marginTop="21dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_below="@+id/textView_name2"
        android:layout_alignLeft="@+id/textView_username2"
        android:layout_alignStart="@+id/textView_username2" />

    <TextView
        android:text="Name: Sample Student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_name2"
        android:textSize="20sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

</RelativeLayout>
